@theme "~/.config/rofi/themes/nord_top_noconf.rasi"
@import "common/shape_classic_sparse.rasi"
@import "common/theme_nord.rasi"

#window {
    location:   north east;
    padding:    0;
    border-radius:  0;
    background-color: transparent;
    //font:       "Ubuntu 7";
}

#mainbox {
    background-color: transparent;
}

#message {
    background-color: @foreground;
    horizontal-align: 0.5;
}

#listview {
    border:     1px;
}

#element {
    padding: 1px 1px 1px -16px;
}
#element-text {
    horizontal-align: 0.5;
}

#element.normal.active,element.alternate.active {
    border:     1px;
    background-color:   inherit;
}

#inputbar {
    padding: 5px;
}

#textbox-prompt-colon {
    str:    "âˆ’";
}

